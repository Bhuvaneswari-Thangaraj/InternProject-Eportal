@model Feedback
@{
    ViewData["Title"] = "Feedback";
   
}
<body>

<form method="post" style="text-align: left;">
<div class="container">

  <!--Modal-->
  <div class="modal-dialog">

    <!--Modal Content-->
    <div class="modal-content">

      <!-- Modal Header-->
      <div class="modal-header">
        <h3>Feedback Request</h3>

      </div>

      <!-- Modal Body-->
      <div class="modal-body text-center">
        <i class="fa-4x mb-3 "></i>
        <h3>Your opinion matters</h3>
        <h5>Help us to improve?<br/> <strong>Give us your feedback.</strong></h5>
        <hr>
<div class="form-group" style="margin-bottom: 10px;">
    <label class="form-label" asp-for="Name" style="display: inline-block; width: 120px;">Enter your name:</label>
    <input size="20" asp-for="Name" class="form-control" style="display: inline-block; width: 200px;"/>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group" style="margin-bottom: 10px;">
    <label class="form-label" asp-for="Email" style="display: inline-block; width: 120px;">Enter your mail:</label>
    <input size="20" asp-for="Email" class="form-control"  style="display: inline-block; width: 200px;"/>
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group" style="margin-bottom: 10px;">
    <label class="form-label" asp-for="Rate" style="display: inline-block; width: 120px;">Your ratings:</label>
    <select asp-for="Rate" class="form-control" required style="display: inline-block; width: 200px;">
      <option disabled selected> -- select your rating -- </option>
            <option type="radio" value="5">5</option>
            <option type="radio" value="4">4</option>
            <option type="radio" value="3">3</option>
            <option type="radio" value="2">2</option>
            <option type="radio" value="1">1</option>
    </select>
    
</div>
<div class="form-group" style="margin-bottom: 10px;">
    <label class="form-label" asp-for="Message" style="display: inline-block; width: 120px;">Your message:</label>
    <textarea type="textarea" placeholder="Your Message" asp-for="Message" class="form-control" style="display: inline-block; width: 200px;">
    </textarea>
    
</div>
      <!-- Modal Footer-->
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Send
          <i class="fa fa-paper-plane"></i>
        </button>
        <a onclick="history.back()" class="btn btn-outline-primary" data-dismiss="modal">Cancel</a>
      </div>

    </div>

  </div>

</div>

<style> 

    .modal-dialog{
    height: 50%;
    width: 50%;
    margin:auto;
}


.modal-header{
    color: white;
    background-color: #007bff;
}

textarea{ border: none; 
    box-shadow: none !important;
    -webkit-appearance:none;
    outline:0px !important;
}

.openmodal{
    margin-left: 35%;
    width: 25%;
    margin-top: 25%;
}

.icon1{
   color: #aa00ff;

}

a{
    margin: auto;
}

input{
    color: #000000;
    

}
body{
background-image: url('../images/l5.jpg');
}


</style>
</form>
</body>